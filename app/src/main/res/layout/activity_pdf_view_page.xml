<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PdfViewPage">

    <RelativeLayout
        android:id="@+id/readHighlightBar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/shape_highlight_bar_2">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_white"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/readTitleHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="@string/read_book"
            android:textColor="@color/background_white"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/readSubTitleHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/readTitleHead"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:text="@string/not_available"
            android:textColor="@color/background_white"/>


    </RelativeLayout>
    
    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/pdfRead"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/readHighlightBar"/>

    <ProgressBar
        android:id="@+id/progBarRead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

</RelativeLayout>