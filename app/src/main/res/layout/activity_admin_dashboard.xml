<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    tools:context=".AdminDashboard">

    <RelativeLayout
        android:id="@+id/adminHighlightBar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/shape_highlight_bar_2">

        <TextView
            android:id="@+id/adminHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="@string/admin_head"
            android:textColor="@color/background_white"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/adminEmailHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adminHead"
            android:layout_centerHorizontal="true"
            android:text="@string/example_email"
            android:textColor="@color/background_white"/>
        
        <ImageButton
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_power_settings_new_logout_transparent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"/>


    </RelativeLayout>

</RelativeLayout>