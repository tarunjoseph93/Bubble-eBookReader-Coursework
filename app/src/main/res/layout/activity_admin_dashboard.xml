<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    tools:context=".AdminDashboard">

    <RelativeLayout
        android:id="@+id/adminHighlightBar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/shape_highlight_bar_2">

        <TextView
            android:id="@+id/adminHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="@string/admin_head"
            android:textColor="@color/background_white"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/adminEmailHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adminHead"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:text="@string/example_email"
            android:textColor="@color/background_white"/>
        
        <ImageButton
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_power_settings_new_logout_transparent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"/>


    </RelativeLayout>

    <EditText
        android:id="@+id/catSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adminHighlightBar"
        android:hint="@string/cat_search_hint"
        android:textColorHint="@color/gray_custom"
        android:drawableStart="@drawable/ic_baseline_search_purple"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@color/background_white"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/catRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/custom_rows_for_category_admin"
        android:layout_below="@+id/catSearch"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_above="@+id/adminLinearLayout"
        android:layout_margin="5dp"/>

    <LinearLayout
        android:id="@+id/adminLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/catAddBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cat_add"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_login_button"
            android:textColor="@color/background_white"
            android:minHeight="50dp"
            android:textSize="16sp"
            android:textAllCaps="false" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/catPdfAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_insert_drive_file_white"
            app:tint="@color/background_white"
            app:backgroundTint="@color/standard_bubble_color"
            app:fabCustomSize="50dp" />



    </LinearLayout>

</RelativeLayout>