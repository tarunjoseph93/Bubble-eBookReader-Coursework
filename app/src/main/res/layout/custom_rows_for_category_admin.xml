<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/standard_bubble_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/catData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/cat_placeholder"
            android:textColor="@color/background_white"
            android:layout_weight="1"
            android:textSize="16sp"/>

        <ImageButton
            android:id="@+id/catDelBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_delete_forever_purple"
            android:background="@drawable/cat_button_del_shape"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>